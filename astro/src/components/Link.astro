---
interface Props {
    active?: boolean
    lower: boolean
    href: string
    text: string
}

const { 
    active = true, 
    href, 
    text, 
    lower
} = Astro.props;
---

<a
    id={href}
    href={href}
    class=`text-gray-600 hover:text-gray-500 ${active ? 'underline' : null} ${lower ? 'lowercase' : null}`
>
    {text}
</a>
